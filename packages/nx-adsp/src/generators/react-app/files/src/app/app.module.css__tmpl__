.footer {
  background-color: #f1f1f1;
  padding-top: 56px;
  padding-bottom: 56px;
  padding-left: 150px;
  padding-right: 150px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 16px solid #0081a2
