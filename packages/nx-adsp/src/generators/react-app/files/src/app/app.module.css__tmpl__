body {
  margin: 0;
}

main {
  display: grid;
  grid-template-columns: repeat(6, auto);
}

section {
  grid-column: 2 / span 2;
  margin-top: 40px;
  margin-bottom: 40px;
}

.app {
  margin: 0;
}

.nextSteps {
  margin-top: 0;
}

.nextSteps li {
  margin-top: 0;
  margin-bottom: 0;
  line-height: 50px;
}

.nextSteps li button { 
  margin: 20px 0 0 10px;
}

