.form {
  > fieldset {
    display: none;
  }

  > fieldset.show {
    display: block;
  }
}

.formActions {  
  display: flex;
  margin-top: 16px;

  > * {
    margin-left: 16px;
  }

  > *:first-child {
    margin-left: auto;
  }
}

.load {
  display: flex;
  flex-direction: row;
  padding-top: 64px;
  padding-bottom: 64px;
  > * {
    margin: auto;
  }
}
