{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "NxAdspExpressService",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the service.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "tenant": {
      "type": "string",
      "description": "Name of the ADSP tenant.",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "alias": "t",
      "x-prompt": "What is the name of your ADSP tenant?"
    },
    "realm": {
      "type": "string",
      "description": "Realm of the ADSP tenant.",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "alias": "r",
      "x-prompt": "What is the realm of your ADSP tenant?"
    }
  },
  "required": ["name", "tenant"]
}
